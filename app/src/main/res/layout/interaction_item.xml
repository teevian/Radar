<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp"
    android:background="@color/outspin_black">

    <include
        android:id="@+id/iv_profile_thumbnail"
        layout="@layout/user_profile_thumbnail_small" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_interaction_message"
                android:text="@string/default_wave"
                android:textSize="@dimen/text_notification_size"
                android:textColor="@color/white"

                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_width="match_parent" />
        </LinearLayout>

        <Button
            android:id="@+id/bt_wave_back"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            app:cornerRadius="20dp"
            app:strokeColor="@color/white"

            android:text="@string/interaction_wave_back"
            android:textSize="@dimen/text_notification_size"
            android:textColor="@color/white"

            android:visibility="visible"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

    </LinearLayout>

</LinearLayout>