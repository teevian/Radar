<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="34.3dp"
    android:background="@color/outspin_black"
    android:layout_centerHorizontal="true"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/tv_burn"
        android:src="@drawable/ic_outspin_burn"
        android:layout_width="@dimen/profile_thumbnail_side_small"
        android:layout_height="@dimen/profile_thumbnail_side_small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/accessibility_burn" />

    <TextView
        android:id="@+id/tv_number_of__burns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginStart="14dp"
        android:layout_alignParentBottom="true"
        android:contentDescription="@string/accessibility_waving"/>

</RelativeLayout>